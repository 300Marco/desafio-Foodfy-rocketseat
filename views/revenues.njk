{% extends "layout.njk" %}

{% block title %}
    <title>Receitas</title>
{% endblock %}

{% block links %}
    <li><a href="/about">Sobre</a></li>
    <li><a href="/revenues" class="active">Receitas</a></li>
{% endblock %}

{% block contents %}
    <section class="cards-food">
        <div class="cards">
            {% for revenue in revenues %}
                <div class="card" id="{{revenue.id}}">
                    <div class="card-img">
                        <img src="{{revenue.image}}" alt="{{revenue.title}}">
                    </div>

                    <div class="card-info" id="{{revenue.title}}">
                        <h4>{{revenue.title}}</h4>
                        <p>{{revenue.author}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block scripts %}
    <script src="/scripts.js"></script>
{% endblock %}
