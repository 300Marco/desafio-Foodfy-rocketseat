{% extends "layout.njk" %}

{% block title %}
    <title>Receita</title>
{% endblock %}

{% block links %}
    <li><a href="/about">Sobre</a></li>
    <li><a href="/revenues" class="active">Receitas</a></li>
{% endblock %}

{% block contents %}
    
    <div class="revenue-image" style="background: url({{revenue.image}})"></div>

    <div class="revenue-title">
        <h2>{{revenue.title}}</h2>
        <span>{{revenue.author}}</span>
    </div>

    <div class="revenue-info">
        <section class="ingredients">
            <h3>
                Ingredientes
                <span>Esconder</span>
            </h3>

            <ul>
                {% for ingredient in revenue.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </section>

        <section class="method-of-preparation">
            <h3>
                Modo de preparo
                <span>Esconder</span>
            </h3>
            
            <ul>
                {% for preparation in revenue.preparation %}
                    <li>{{preparation}}</li>
                {% endfor %}
            </ul>
        </section>

        <section class="additional-information">
            <h3>
                Informações adicionais
                <span>Esconder</span>
            </h3>
            
            <ul>
                <li>{{revenue.information}}</li>
            </ul>
        </section>
    </div>

{% endblock %}

{% block scripts %}
    <script src="/scripts.js"></script>
{% endblock %}
