{% extends "layout.njk" %}

{% block title %}
    <title>Receitas</title>
{% endblock %}

{% block links %}
    <li><a href="/about">Sobre</a></li>
    <li><a href="/recipes" class="active">Receitas</a></li>
{% endblock %}

{% block contents %}
    <section class="cards-food">
        <div class="cards">
            {% for recipe in recipes %}
                <div class="card" id="{{recipe.id}}">
                    <div class="card-img">
                        <img src="{{recipe.image}}" alt="{{recipe.title}}">
                    </div>

                    <div class="card-info" id="{{recipe.title}}">
                        <h4>{{recipe.title}}</h4>
                        <p>{{recipe.author}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block scripts %}
    <script src="/scripts.js"></script>
{% endblock %}
