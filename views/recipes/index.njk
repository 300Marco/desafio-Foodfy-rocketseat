{% extends "layout.njk" %}

{% block title %}
    <title>Foodfy</title>
{% endblock %}

{% block contents %}
    <section class="box-chef">
        <div class="box-info">
            <h2>As melhores receitas</h2>
            <p>
                Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.
            </p>
        </div>

        <div class="box-img-chef">
            <img src="/assets/chef.png" alt="Imagem Chef">
        </div>
    </section>

    <section class="cards-food">
        <h3>Mais acessadas</h3>
        
        <div class="cards">
            <div class="card" id="{{recipes[0].id}}">
                <div class="card-img">
                    <img src="{{recipes[0].image}}" alt="{{recipes[0].title}}">
                </div>

                <div class="card-info">
                    <h4>{{recipes[0].title}}</h4>
                    <p>{{recipes[0].author}}</p>
                </div>
            </div>

            <div class="card" id="{{recipes[1].id}}">
                <div class="card-img">
                    <img src="{{recipes[1].image}}" alt="{{recipes[1].title}}">
                </div>

                <div class="card-info">
                    <h4>{{recipes[1].title}}</h4>
                    <p>{{recipes[1].author}}</p>
                </div>
            </div>

            <div class="card" id="{{recipes[2].id}}">
                <div class="card-img">
                    <img src="{{recipes[2].image}}" alt="{{recipes[2].title}}">
                </div>

                <div class="card-info">
                    <h4>{{recipes[2].title}}</h4>
                    <p>{{recipes[2].author}}</p>
                </div>
            </div>

            <div class="card" id="{{recipes[3].id}}">
                <div class="card-img">
                    <img src="{{recipes[3].image}}" alt="{{recipes[3].title}}">
                </div>

                <div class="card-info">
                    <h4>{{recipes[3].title}}</h4>
                    <p>{{recipes[3].author}}</p>
                </div>
            </div>
            
            <div class="card" id="{{recipes[4].id}}">
                <div class="card-img">
                    <img src="{{recipes[4].image}}" alt="{{recipes[4].title}}">
                </div>

                <div class="card-info">
                    <h4>{{recipes[4].title}}</h4>
                    <p>{{recipes[4].author}}</p>
                </div>
            </div>

            <div class="card" id="{{recipes[5].id}}">
                <div class="card-img">
                    <img src="{{recipes[5].image}}" alt="{{recipes[5].title}}">
                </div>

                <div class="card-info">
                    <h4>{{recipes[5].title}}</h4>
                    <p>{{recipes[5].author}}</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block scripts %}
    <script src="/scripts.js"></script>
{% endblock %}