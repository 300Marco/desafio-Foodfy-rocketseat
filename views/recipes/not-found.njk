{% extends "layout.njk" %}

{% block title %}
    <title>Page not found</title>
{% endblock %}

{% block contents %}
    <div class="box-error">
        <div class="error-message">
            <div class="error-image">
                <img src="/assets/error-404.png" alt="">
            </div>

            <div class="error-info">
                <span>Esta página não existe!</span>
                <span>
                    Não fique aqui com fome, volte para a página inicial.
                </span>
            </div>
        </div>
    </div>
{% endblock %}