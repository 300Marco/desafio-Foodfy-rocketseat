{% extends "layout.njk" %}

{% block title %}
    <title>{{recipe.title}}</title>
{% endblock %}

{% block links %}
    <li><a href="/about">Sobre</a></li>
    <li><a href="/recipes" class="active">Receitas</a></li>
{% endblock %}

{% block contents %}
    <div class="recipe-image" style="background: url({{recipe.image}})"></div>

    <div class="recipe-title">
        <h2>{{recipe.title}}</h2>
        <span>por {{recipe.author}}</span>
    </div>

    <div class="recipe-info">
        <section class="ingredients">
            <h3>
                Ingredientes
                <span>Esconder</span>
            </h3>

            <ul>
                {% for ingredient in recipe.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </section>

        <section class="method-of-preparation">
            <h3>
                Modo de preparo
                <span>Esconder</span>
            </h3>
            
            <ul>
                {% for preparation in recipe.preparation %}
                    <li>{{preparation}}</li>
                {% endfor %}
            </ul>
        </section>

        <section class="additional-information">
            <h3>
                Informações adicionais
                <span>Esconder</span>
            </h3>
            
            <ul>
                <li>{{recipe.information}}</li>
            </ul>
        </section>
    </div>
{% endblock %}
