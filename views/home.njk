                    <img src="{{revenues[2].image}}" alt="{{revenues[2].title}}">
                </div>

                <div class="card-info">
                    <h4>{{revenues[2].title}}</h4>
                    <p>{{revenues[2].author}}</p>
                </div>
            </div>

            <div class="card">
                <div class="card-img">
                    <img src="{{revenues[3].image}}" alt="{{revenues[3].title}}">
                </div>

                <div class="card-info">
                    <h4>{{revenues[3].title}}</h4>
                    <p>{{revenues[3].author}}</p>
                </div>
            </div>
            
            <div class="card">
                <div class="card-img">
                    <img src="{{revenues[4].image}}" alt="{{revenues[4].title}}">
                </div>

                <div class="card-info">
                    <h4>{{revenues[4].title}}</h4>
