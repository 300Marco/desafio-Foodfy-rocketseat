{% extends "layout.njk" %}

{% block title %}
    <title>Editar - {{chef.name}}</title>
{% endblock %}

{% block header %}
    {% include "chefs/header.njk" %}
{% endblock %}

{% block contents %}
    <div class="recipe-form">
        <form method="POST" action="/admin/chefs?_method=put">
            <div class="recipe-detail">
                <span class="detail-title">Editando Chef</span>

                <div class="buttons">
                    <button class="delete-button" form="form-delete">Deletar</button>
                    
                    <button class="edit-button" type="submit">Salvar Chef</button>
                </div>
            </div>

            {% include "chefs/fields.njk" %}

            <input 
                type="hidden"
                name="id"
                value="{{chef.id}}"
            >
        </form>

        <form id="form-delete" method="POST" action="/admin/chefs?_method=delete">
            <input type="hidden" name="id" value="{{chef.id}}">
        </form>
    </div>
{% endblock %}

{% block footer %} {% endblock %}