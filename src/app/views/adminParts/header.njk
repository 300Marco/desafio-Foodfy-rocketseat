                                        Usuários Cadastrados
                                    </a>
                                </li>
                            {# {% endif %} #}
                            
                            <li>
                                {# quando criar a página com a listagem de usuários, colocar o link aqui #}
                                <a href="/">
                                    <span class="material-icons">home</span>
                                    Site Foodfy
                                </a>
                            </li>
                            <li>
                                <form action="/admin/users/logout" method="POST">
                                    <button>
                                        <span class="material-icons">logout</span>
                                        Sair
                                    </button>
                                </form>
                            </li>
                        </ul>
                    {% endif %}
                </li>
            </ul>
        </nav>
    </div>
