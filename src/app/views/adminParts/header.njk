<header class="header-background">
    <div class="box-admin-header-menu">
        <div class="title">
            <h2 class="sr-only">Admin Foodfy</h2>

            <a href="/admin/recipes">
                <img src="/assets/admin-logo.png" alt="Foodfy">
            </a>
        </div>

        <nav>
            <ul class="links">
                <li class="recipes">
                    <a href="/admin/recipes">Receitas</a>
                    {% if session.userId %}
                        <span class="recipes-hover">Receitas</span>
                        <ul class="recipe-submenu">
                            <span class="recipe-arrow"></span>
                            <li>
                                <a href="/admin/user/recipes">
                                    Minhas receitas
                                </a>
                            </li>
                            <li>
                                <a href="/admin/recipes">
                                    Gerenciar Receitas
                                </a>
                            </li>
                        </ul>
                    {% endif %}
                </li>
                <li><a href="/admin/chefs">Chefs</a></li>
                <li class="accounts">
                    <a href="/admin/profile">Usuários</a>
                    {% if session.userId %}
                        <span class="accounts-hover">Usuários</span>
                        <ul class="submenu">
                            <span class="arrow"></span>
                            <li>
                                <a href="/admin/profile">
                                    <span class="material-icons md-18">account_circle</span>
                                    Minha conta
                                </a>
                            </li>
                            {% if user.is_admin == true %}
                                <li>
                                    <a href="/admin/users/create">
                                        <span class="material-icons">person_add</span>
                                        Criar usuário
                                    </a>
                                </li>
                            {% endif %}

                            {% if user.is_admin %}
                                <li>
                                    <a href="/admin/users">
                                        <span class="material-icons">supervisor_account</span>
                                        Usuários Cadastrados
                                    </a>
                                </li>
                            {% endif %}
                            
                            <li>
                                <a href="/">
                                    <span class="material-icons">home</span>
                                    Site Foodfy
                                </a>
                            </li>
                            <li>
                                <form action="/admin/users/logout" method="POST">
                                    <button>
                                        <span class="material-icons">logout</span>
                                        Sair
                                    </button>
                                </form>
                            </li>
                        </ul>
                    {% endif %}
                </li>
            </ul>
        </nav>

        <div 
            class="
                profile-type 
                {% if user.is_admin == true %}
                    is_admin_header
                {% else %}
                    is_user_header
                {% endif %}
            "
        >
            {% if user.is_admin == true %}
                <span class="material-icons ">admin_panel_settings</span>
                <p>Administrador</p>
            {% else %}
                <span class="material-icons ">person</span>
                <p>Usuário</p>
            {% endif %}
        </div>
    </div>
</header>