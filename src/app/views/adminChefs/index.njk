{% extends "layout.njk" %}

{% block title %}
    <title>Gerenciar Chefs</title>
{% endblock %}

{% block header %}
    {% include "adminChefs/header.njk" %}
{% endblock %}

{% block contents %}
    <section class="cards-food cards-food-admin">
        <h3>Gerenciar chefs</h3>
            <div class="cards cards-admin-chefs">
                {% for chef in chefs %}
                    <div class="card-admin-chefs">
                        <div class="card-img-admin-chefs" style="background-image: url('{{chef.img}}')">
                        </div>

                        <div class="card-info-admin">
                            <p>{{chef.name}}</p>
                            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
    </section>
{% endblock %}

{% block footer %} {% endblock %}