{% extends "layout.njk" %}

{% block title %}
    <title>Receitas</title>
{% endblock %}

{% block links %}
    <li><a href="/about">Sobre</a></li>
    <li><a href="/recipes" class="active">Receitas</a></li>
    <li><a href="/chefs">Chefs</a></li>
{% endblock %}

{% block contents %}
    <section class="cards-food">
        <div class="cards">
            {% for recipe in recipes %}
                <div class="card" id="{{recipe.id}}">
                    <div class="card-img" style="background-image: url({{recipe.image}})">
                    </div>

                    <div class="card-info" id="{{recipe.title}}">
                        <h4>{{recipe.title}}</h4>
                        <p>por {{recipe.chefs_name}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
