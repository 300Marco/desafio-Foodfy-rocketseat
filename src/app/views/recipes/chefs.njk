{% extends "layout.njk" %}

{% block title %}
    <title>Receitas</title>
{% endblock %}

{% block links %}
    <li><a href="/about">Sobre</a></li>
    <li><a href="/recipes">Receitas</a></li>
    <li><a href="/chefs" class="active">Chefs</a></li>
{% endblock %}

{% block contents %}
    <section class="chefs-cards-food">
        <div class="cards cards-admin-chefs">
            {% for chef in chefs %}
                <div class="card-admin-chefs" id="{{recipe.id}}">
                    <div class="card-img-admin-chefs" style="background-image: url({{chef.avatar_url}})">
                    </div>

                    <div class="chef-card-info" id="{{chef.name}}">
                        <h4>{{chef.name}}</h4>
                        <p>1 Receita</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block footer %}
    <footer class="chefs-footer">
        <span>Todos os direitos reservados, receitas Foodfy</span>
    </footer>
{% endblock %}
