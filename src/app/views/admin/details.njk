{% extends "layout.njk" %}

{% block title %}
    <title>Detalhes - {{recipe.title}}</title>
{% endblock %}

{% block header %}
    {% include "admin/header.njk" %}
{% endblock %}

{% block contents %}
    <div class="recipe-detail">
        <span class="detail-title">Receita: {{recipe.title}}</span>

        <a class="edit-button" href="/admin/recipes/{{recipe.id}}/edit">Editar receita</a>
    </div>

    <div class="recipe-image" style="background: url({{recipe.image}})"></div>

    <div class="recipe-title">
        <h2>{{recipe.title}}</h2>
        <span>por {{recipe.chefs_name}}</span>
    </div>

    <div class="recipe-info recipe-info-admin">
        <section class="ingredients">
            <h3>
                Ingredientes
                <span>Esconder</span>
            </h3>

            <ul>
                {% for ingredient in recipe.ingredients %}
                    <li>- {{ingredient}}</li>
                {% endfor %}
            </ul>
        </section>

        <section class="method-of-preparation">
            <h3>
                Modo de preparo
                <span>Esconder</span>
            </h3>
            
            <ul>
                {% for preparation in recipe.preparation %}
                    <li>- {{preparation}}</li>
                {% endfor %}
            </ul>
        </section>

        <section class="additional-information">
            <h3>
                Informações adicionais
                <span>Esconder</span>
            </h3>
            
            <ul>
                <li>{{recipe.information}}</li>
            </ul>
        </section>
    </div>
{% endblock %}

{% block footer %} {% endblock %}