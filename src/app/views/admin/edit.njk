{% extends "layout.njk" %}

{% block title %}
    <title>Editar - {{recipe.title}}</title>
{% endblock %}

{% block header %}
    {% include "admin/header.njk" %}
{% endblock %}

{% block contents %}
    <div class="recipe-form">
        <form method="POST" action="/admin/recipes?_method=put">
            <div class="recipe-detail">
                <span class="detail-title">Editando receita</span>

                <div class="buttons">
                    <button class="delete-button" form="form-delete">Deletar</button>

                    <button class="edit-button" type="submit">Salvar receita</button>
                </div>
            </div>

            {% include "admin/fields.njk" %}

            <input 
                type="hidden"
                name="id"
                value="{{recipe.id}}"
            >
        </form>

        <form id="form-delete" method="POST" action="/admin/recipes?_method=delete">
            <input type="hidden" name="id" value="{{recipe.id}}">
        </form>
    </div>
{% endblock %}

{% block footer %} {% endblock %}