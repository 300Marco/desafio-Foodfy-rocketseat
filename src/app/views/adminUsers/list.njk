{% extends "layout.njk" %}

{% block title %}
    <title>Lista de Usuários</title>
{% endblock %}

{% block header %}
    {% include "adminParts/header.njk" %}
{% endblock %}

{% block contents %}
    <section class="users-cards">
        <div class="title-button">
            <h3>Usuários</h3>
            <a href="/admin/users/create" class="edit-button">Novo</a>
        </div>
            <div class="cards">
                {% for user in users %}
                    <div class="card-content">
                        <p class="name-user">{{user.name}}</p>
                        <p class="email-user">{{user.email}}</p>
                        <div class="user-button">
                            <a class="edit-user" href="/admin/users/{{user.id}}/edit">Editar</a>
                            <form id="form-delete" method="POST" action="/admin/users?_method=delete">
                                <a class="remove-user remove-user-list" href="#">
                                    Remover
                                    <span>{{user.id}}</span>
                                </a>

                                <div class="confirmation-container">
                                    <div class="confirmation">
                                        <p>Deletar usuário</p>
                                        <p>
                                            Você tem certeza que deseja deletar este usuário?<br>
                                            Esta ação não poderá ser desfeita!
                                        </p>

                                        <input type="hidden" name="id" value=''>

                                        <button class="confirm-delete">Sim, excluir</button>
                                        <button class="cancel-delete">Cancelar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
    </section>
{% endblock %}

{% block footer %} {% endblock %}