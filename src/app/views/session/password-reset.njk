{% extends "layout.njk" %}

{% block title %}
    <title>Recuperar Senha</title>
{% endblock %}

{% block header %}
    {% include "adminParts/sessionHeader.njk" %}
{% endblock %}

{% block contents %}
    <div class="container-session">
        <div class="session-form">
            <h3>Nova senha</h3>
            <form method="POST" action="/admin/password-reset">
                {% include "session/reset-fields.njk" %}

                <div class="session-forgot-password">
                    <div class="buttons">
                        <button class="edit-button admin-button" type="submit">Nova Senha</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block footer %} {% endblock %}