{% extends "layout.njk" %}

{% block title %}
    <title>Recuperar Senha</title>
{% endblock %}

{% block header %}
    {% include "adminParts/sessionHeader.njk" %}
{% endblock %}

{% block contents %}
    <div class="container-session">
        <div class="session-form">
            <h3>Esqueceu a Senha?</h3>
            <form method="POST" action="/admin/forgot-password">
                <div class="recipe-fields forgot-password">
                    <div class="name-input">Email</div>
                    <input 
                        {% if error %}
                            class="login-error"
                        {% endif %}
                        type="email"
                        name="email" 
                        value="{{user.email}}"
                        placeholder="Digite seu email para recuperar seua senha"
                        onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>

                <div class="session-forgot-password">
                    <div class="buttons">
                        <button class="edit-button admin-button" type="submit">Recuperar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block footer %} {% endblock %}