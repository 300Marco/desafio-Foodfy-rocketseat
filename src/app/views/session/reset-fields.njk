<div class="recipe-fields session-fields">
    <div class="admin-email">
        <div class="name-input">Email</div>
        <input 
            {% if error %}
                class="login-error"
            {% endif %}
            type="email"
            name="email" 
            value="{{user.email}}"
            placeholder="Digite seu email"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>

    <div class="admin-password">
        <div class="name-input">Senha</div>
        <div class="reset-password-input">
            <input
                {% if error %}
                    class="login-error"
                {% endif %}
                type="password" 
                name="password"
                placeholder="Digite sua senha"
            >
        </div>
    </div>

    <div class="admin-password">
        <div class="name-input">RepetiÃ§Ã£o da Senha</div>

        <div class="reset-password-input">
            <input
                {% if error %}
                    class="login-error"
                {% endif %}
                type="password" 
                name="passwordRepeat"
                placeholder="Repita a nova senha"
                onfocus="PasswordField.showSpanResetPassword()"
            >

            <span onclick="PasswordField.showFieldsPassword()">Mostrar senhas</span>
        </div>
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">